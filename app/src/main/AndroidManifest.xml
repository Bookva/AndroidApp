<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsuir.kloop1996.bookva">

    <application
        android:name=".BookvaAplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_bookva"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.view.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">



            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.activity.BookDetailActivity"
            android:parentActivityName=".ui.view.activity.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.view.activity.MainActivity" />
        </activity>

        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
